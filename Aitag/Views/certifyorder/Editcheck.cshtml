<script type="text/javascript">
    $(document).ready(function () {
        $("#FormAdd").submit(function (e) {
            var errmsg = "";
            // if ($("#cerno").val() == "")
            // { errmsg = "請選擇縣市代碼\n"; }
            if ($("#citemid").val() == "")
            { errmsg += "請輸入認證項目\n"; }

            if ($("#farmerno").val() == "")
            { errmsg += "請輸入農戶姓名\n"; }


            if (errmsg != "") {
                alert(errmsg);
                return false;
            }
            else {
                return true;
            }
        });
    });
</script>



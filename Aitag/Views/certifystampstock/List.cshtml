    //System.Data.SqlClient.SqlConnection comconn1 = dbobj.get_conn("Aitag_DBContext");
    string weblink = System.Configuration.ConfigurationManager.AppSettings["weblink"].ToString();
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
    function submitform(tmpgo, tmppage, tmpkey) {
        $('#page').val(tmppage);
        switch (tmpgo) {
            case "L":
                FormList.target = "";
                FormList.action = "/certifystampstock/list";
                break;
            case "A":
                FormList.action = "/certifystamp/Add";
                break;
            //case "R":
            //    FormList.target = "_blank";
            //    FormList.action = "/certifystampstock/Stamplist";
            //    FormList.target = "";
                break;
            case "D":
                FormList.action = "/certifystamp/Delete";
                break;
            case "DELL":
                FormList.target = "";
                FormList.action = "/certifystampstock/DELL";
                break;
        }

        if (tmpgo != "LQ")
        {
            FormList.submit();
        }
        else {
            var errmsg = "";
            if ($("#qsdate").val() != "")
            { errmsg = errmsg + check_date(document.FormList.qsdate, "異動起日") }

            if ($("#qedate").val() != "")
            { errmsg = errmsg + check_date(document.FormList.qedate, "異動迄日") }


            if (errmsg != "") {
                alert(errmsg);
                return false;
            }
            else {
                return true;
            }
        }

    }

    function sortform(tmp1, tmp2) {
        $('#page').val(1);
        $('#orderdata').val(tmp1);
        $('#orderdata1').val(tmp2);
        FormList.submit();
    }

    function rptcsv() {
        FormList.target = '_blank';
        FormList.action = "/certifystampstock/Stamplist";
        FormList.submit();
        FormList.action = "/certifystampstock/list";
        FormList.target = '';
    }
</script>

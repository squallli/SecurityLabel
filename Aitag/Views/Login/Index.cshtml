@model Aitag.Models.Logoin
@{   Layout = null;}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>AITag安品數據-智慧物聯雲標籤服務管理系統</title>
    <style type="text/css">
        body {
            margin: 0px auto;
            font-family: "微軟正黑體", "新細明體", "細明體",Arial, Helvetica, sans-serif;
            background: #5eb4e1;
        }

        .main {
            margin: 0px auto 0px auto;
            width: 1200px;
            height: 603px;
            background: #5eb4e1 url(/images/loginbg1.png) top left no-repeat;
            position: relative;
        }

        .login {
            position: absolute;
            width: 360px;
            left: 490px;
            top: 280px;
        }

        .fonttext {
            position: absolute;
            left: 680px;
            top: 510px;
            width: 291px;
            color: #fff1be;
            font-weight: bold;
            font-size: 12px;
        }

        .form_text {
            padding: 8px 10px;
            width: 60%;
            .width:50%;
            font-size: 18px;
            background-color: #fffbec;
            color: #785a20;
            font-family: "微軟正黑體", "新細明體", "細明體";
        }

        .form_text1 {
            padding: 8px 10px;
            width: 80%;
            font-size: 22px;
            background-color: #fffbec;
            color: #785a20;
            font-family: "微軟正黑體", "新細明體", "細明體";
        }

        .got, .got a {
            font-size: 18px;
            color: #6bb22a;
            text-decoration: none;
            font-family: Arial, Helvetica, sans-serif;
        }

            .got:hover {
                color: #000;
                text-decoration: underline;
            }

        .footer {
            margin: 0px auto;
            width: 100%;
            height: 150px;
            background-color: #f4f4f4;
            background: linear-gradient(#f4f4f4 10%, #ffffff 100%);
        }

            .footer .inf {
                width: 1020px;
                margin: 0px auto;
                font-size: 14px;
                color: #acacac;
                padding-top: 30px;
                letter-spacing: 1px;
                line-height: 200%;
            }

        .button, a .button {
            font-size: 28px;
            border-radius: 6px; /*圓角左上 右上 右下 左下 順時針*/
            color: #fff;
            padding: 10px 20px;
            min-width: 134px;
            margin: 5px 2px;
            text-decoration: none;
            border: 1px;
            background-color: #000;
            background: linear-gradient(#2d2929 50%, #000 50%);
            cursor: pointer;
            font-weight: bold;
            font-family: "微軟正黑體", "新細明體", "細明體",Arial, Helvetica, sans-serif;
        }

            .button:hover {
                color: #fff;
                text-decoration: none;
                background-color: #000;
                background: linear-gradient(#1f1f1f 50%, #000 50%);
            }
    </style>

    <script language=javascript>
        function checkdata() {
            var errmsg = "";
            if (document.form1.UserName.value == "") {
                errmsg = "請輸入帳號\n";
            }
            if (document.form1.Password.value == "") {
                errmsg = errmsg + "請輸入密碼";
            }
            if (errmsg != "") {
                alert(errmsg)
                return false
            }
        }
    </script>
</head>

<body>
    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @name = "form1", @id = "form1", @onsubmit = "return checkdata()" }))
    {
        <center>@Html.ValidationSummary(true)</center>
        <div class="main">
            <div class="login">
                <table width="100%" border="0" cellspacing="0" cellpadding="5">
                    <!--
                       <tr>
                           <td align="left" colspan=2 valign="bottom" style=" color:#000000; font-size:20px;">後台管理登入專區</td>
                       </tr>
                        -->
                    <tr>
                        <td align="right">帳號</td>
                        <td align="left" style=" color: #fff;">@Html.TextBoxFor(m => m.UserName, new { @class = "form_text" })</td>
                    </tr>
                    <tr>
                        <td align="right">密碼</td>
                        <td align="left" style=" color: #fff;">@Html.PasswordFor(m => m.Password, new { @class = "form_text" })</td>
                    </tr>
                    <!--tr>
                      <td><table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <!--tr>
                      <td width="40%"><input class="form_text1" id="commentAuth" name="commentAuth" placeholder="驗證碼" size="10" type="text" style="vertical-align: text-bottom;"/></td>
                      <td><img src="images/0.gif" alt="0"/><img src="images/1.gif" alt="1"/><img src="images/2.gif" alt="2"/><img src="images/3.gif" alt="3"/></td>
                      <td><a href="#" class="got">重新產生</a></td>
                    </tr-->
                    <!--/table>

                          </td>
                      </tr-->
                    <tr>
                        <td colspan=2 align="left">&nbsp;&nbsp;<input name="Login" type="submit" id="Login" value="登 入" class="button" /><input name="clean" type="reset" id="clean" value="清 除" class="button" /></td>
                    </tr>
                </table>
            </div>

        </div>

    }
</body>
</html>

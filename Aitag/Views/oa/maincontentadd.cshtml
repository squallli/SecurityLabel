                    @Html.Raw(" if($('#mcfiletype').val()=='')\r")
                    @Html.Raw(" { errmsg = errmsg + '請選擇類型\\n';}\r")
                    @Html.Raw(" else{")
                    @Html.Raw(" if($('#mcfiletype').val() == '0' && $('#mctitle').val()=='')")
                    @Html.Raw(" { errmsg = errmsg + '請輸入標題\\n' }}\r")
                    @Html.Raw(" if($('#mcid').val()=='')\r")
                    @Html.Raw(" { errmsg = errmsg + '請先挑選檔案批次上傳\\n';}\r")
                }
            }



            if (errmsg != "") {
                alert(errmsg);
                return false;
            }

        });
    });
</script>



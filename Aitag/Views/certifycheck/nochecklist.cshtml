<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script type="text/javascript">
    function submitform(tmpgo, tmppage, tmpkey) {
        $('#page').val(tmppage);
        switch (tmpgo) {
            case "L":
                FormList.target = "";
                FormList.action = "/certifycheck/nochecklist";
                break;
            case "P":
                FormList.target = "_blank";
                FormList.action = "/certifycheck/nochecklistrpt";
                break;
            case "A":
                FormList.action = "/certifycheck/Add";
                break;
            case "E":
                FormList.action = "/certifycheck/Edit?" + tmpkey;
                break;
            case "D":
                FormList.action = "/certifycheck/Delete";
                break;
        }

        if (tmpgo != "LQ")
        {
            FormList.submit();
            
        }
        else {
            FormList.target = "";
            FormList.action = "/certifycheck/nochecklist";
            var errmsg = "";
            if ($("#qscerdate").val() != "")
            { errmsg = errmsg + check_date(document.FormList.qscerdate, "受理起日期") }

            if ($("#qecerdate").val() != "")
            { errmsg = errmsg + check_date(document.FormList.qecerdate, "受理迄日期") }

            if ($("#qsdealdate").val() != "")
            { errmsg = errmsg + check_date(document.FormList.qsdealdate, "割稻起日期") }

            if ($("#qedealdate").val() != "")
            { errmsg = errmsg + check_date(document.FormList.qedealdate, "割稻迄日期") }


            if (errmsg != "") {
                alert(errmsg);
                return false;
            }
            else {
                return true;
            }
        }

    }

    function sortform(tmp1, tmp2) {
        $('#page').val(1);
        $('#orderdata').val(tmp1);
        $('#orderdata1').val(tmp2);
        FormList.submit();
    }
</script>

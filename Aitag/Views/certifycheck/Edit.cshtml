<script type="text/javascript">
    $(document).ready(function () {
        $("#FormAdd").submit(function (e) {
            var errmsg = "";
            // if ($("#cerno").val() == "")
            // { errmsg = "請選擇縣市代碼\n"; }
            if ($("#citemid").val() == "")
            { errmsg += "請輸入認證項目\n"; }

            if ($("#farmerno").val() == "")
            { errmsg += "請輸入農戶姓名\n"; }

            if ($("#certime").val() == "")
            { errmsg += "請輸入期別\n"; }

            if ($("#adddate").val() == "")
            { errmsg += "請選擇申請日期\n"; }
            else
            { errmsg = errmsg + check_date(document.FormAdd.adddate, "申請日期") }

            if ($("#cerdate").val() == "")
            { errmsg += "請選擇受理日期\n"; }
            else
            { errmsg = errmsg + check_date(document.FormAdd.cerdate, "受理日期") }

            if ($("#dealdate").val() == "")
            { errmsg += "請選擇割稻日期\n"; }
            else
            { errmsg = errmsg + check_date(document.FormAdd.dealdate, "割稻日期") }

            if ($("input[name='ldno']:checked").length == 0)
                { errmsg += "請選擇耕地資料-土地地號\n"; }
                

            if (errmsg != "") {
                alert(errmsg);
                return false;
            }
            else {
                return true;
            }
        });
    });
</script>



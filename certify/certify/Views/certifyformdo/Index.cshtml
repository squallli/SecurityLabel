
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />

    <title></title>

    <style type="text/css">
        .code {
            display: block;
            padding: 10px;
            margin: 0 0 10px;
            font-size: 14px;
            line-height: 1.5;
            color: #333;
            word-break: break-all;
            word-wrap: break-word;
            background-color: #f5f5f5;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
    </style>

    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>
    <script>
        $(document).ready(function () {
            jQuery.support.cors = true;
					$.ajax({
					    url: 'api/csfa?barcode=@ViewBag.barcode',
						type: 'GET',
						dataType: "json",
						cache: false,

						success: function (msg) {
						  
						    $('#tagImg').attr('src', 'data:image/png;base64,' + msg.base64);
						},

						error: function(xhr, ajaxOpt, err){
							alert('error');
						}
					});
			});
    </script>

</head>
<body>
    
    <div>
        <img id="tagImg" src="#" />
    </div>

</body>
</html>
